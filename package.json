{
  "name": "@strand/core",
  "version": "0.1.0",
  "description": "Zero-copy genomic data engine built on SharedArrayBuffer and Atomics.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import":  { "types": "./dist/index.d.ts",   "default": "./dist/index.js"  },
      "require": { "types": "./dist/index.d.cts",  "default": "./dist/index.cjs" }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build":     "tsup",
    "pretest":   "tsup",
    "test":      "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup":       "^8.0.0",
    "typescript": "^5.0.0",
    "vitest":     "^4.0.0"
  },
  "keywords": [
    "genomics",
    "sharedarraybuffer",
    "zero-copy",
    "streaming",
    "bioinformatics",
    "vcf",
    "bam",
    "atomics"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryandward/strand"
  },
  "author": "Ryan Ward"
}
